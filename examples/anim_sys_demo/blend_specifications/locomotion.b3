# example of blend tree FILE
# run and walk animation names at the below should be extracted directly from the character file(so the names should match)

{
  "name": "Walk-Run-Idle",
  "parameters": [
    {
      "name": "Speed",
      "type": "float"
    },
    {
      "name": "VerticalSpeed",
      "type": "float"
    }
  ],
  "states": [
    {
      "name": "Idle",
      "motion": "Idle.anim",
      "thresholds": {
        "Speed": "0.1",
        "VerticalSpeed": "0.1"
      }
    },
    {
      "name": "Walk",
      "motion": "Walk.anim",
      "thresholds": {
        "Speed": "0.1",
        "VerticalSpeed": "0.1"
      }
    },
    {
      "name": "Run",
      "motion": "Run.anim",
      "thresholds": {
        "Speed": "0.6",
        "VerticalSpeed": "0.1"
      }
    }
  ],
  "transitions": [
    {
      "from": "Idle",
      "to": "Walk",
      "conditions": [
        {
          "parameter": "Speed",
          "range": {
            "min": "0.1",
            "max": "0.5"
          }
        }
      ]
    },
    {
      "from": "Walk",
      "to": "Idle",
      "conditions": [
        {
          "parameter": "Speed",
          "range": {
            "min": "0.0",
            "max": "0.1"
          }
        }
      ]
    },
    {
      "from": "Walk",
      "to": "Run",
      "conditions": [
        {
          "parameter": "Speed",
          "range": {
            "min": "0.6",
            "max": "1.0"
          }
        }
      ]
    },
    {
      "from": "Run",
      "to": "Walk",
      "conditions": [
        {
          "parameter": "Speed",
          "range": {
            "min": "0.5",
            "max": "0.9"
          }
        }
      ]
    },
    {
      "from": "Run",
      "to": "Idle",
      "conditions": [
        {
          "parameter": "Speed",
          "range": {
            "min": "0.0",
            "max": "0.6"
          }
        }
      ]
    }
  ]
}
